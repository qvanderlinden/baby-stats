{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.16.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "better-auth": "^1.3.27"
  },
  "scripts": {
    "start": "bun src/index.ts",
    "migrate-dev": "bun run --env-file=.env.local --env-file=../.env prisma migrate dev --name auth",
    "migrate-prod": "bun run --env-file=.env.local --env-file=../.env prisma migrate deploy",
    "migrate-reset": "bun run --env-file=.env.local --env-file=../.env prisma migrate reset"
  }
}
